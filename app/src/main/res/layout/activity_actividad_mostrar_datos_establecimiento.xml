<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".ActividadMostrarDatosEstablecimiento">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="@string/imgLogo"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/txtBienvenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="cursive"
        android:text="@string/txtBienvenido"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/layoutFechayHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/tvDatoFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="cursive"
            android:format24Hour="hh:mm:ss a"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSemaforo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLleno"

            android:layout_width="80dp"
            android:layout_height="31dp"

            android:layout_margin="30dp"
            android:background="@drawable/botonlleno"
            android:text="Lleno"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnDisponible"

            android:layout_width="100dp"
            android:layout_height="31dp"

            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/botodisponible"
            android:text="Disponible"
            android:textColor="#170404"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btnVacio"

            android:layout_width="60dp"
            android:layout_height="31dp"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/botonvacio"
            android:text="Vacio"
            android:textColor="#170404"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>